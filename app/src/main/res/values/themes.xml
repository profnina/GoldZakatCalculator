<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ZakatGoldCalculator" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Customize your light theme here. -->
        <item name="colorPrimaryDark">@color/my_light_primary</item>
        <item name="colorPrimary">@color/my_light_secondary</item>
        <item name="colorAccent">@color/accent_color</item>

        <item name="android:textColorPrimary">@color/white</item>

        <item name="android:itemTextAppearance">@style/PopupMenuStyle</item>


    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Define a style for the AlertDialog with black text -->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Define a style for the AlertDialog with black text -->
    <style name="manual_style" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>


    <!-- Define a style for the "OK" button in the AlertDialog with an orange text color -->
    <style name="AlertDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/holo_orange_light</item>
    </style>

    <style name="Theme.ZakatGoldCalculator" parent="Base.Theme.ZakatGoldCalculator" />
</resources>